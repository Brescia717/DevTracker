<div class="container" id="profile-info">
  <div class="form-horizontal">
    <div class="form-group">
      <% if @profile %>
        <div class="profile-info panel panel-defaul">
          <div class="row">
            <ul>
              <li>
                <span class="control-label col-lg-2 col-xs-4">Summary:</span>
                <div class="form-input col-lg-10 col-xs-8">
                  <div class="form-control" id="summary"><%= profile_summary %></div>
                </div>
              </li>
              <li>
                <span class="control-label col-lg-2 col-xs-4">Primary framework:</span>
                <div class="form-input col-lg-10 col-xs-8">
                  <div class="form-control"><%= profile_framework %></div>
                </div>
              </li>
              <li>
                <span class="control-label col-lg-2 col-xs-4">Website:</span>
                <div class="form-input col-lg-10 col-xs-8">
                  <div class="form-control"><%= profile_website %></div>
                </div>
              </li>
              <li>
                <span class="control-label col-lg-2 col-xs-4">GitHub:</span>
                <div class="form-input col-lg-10 col-xs-8">
                  <div class="form-control"><%= profile_github %></div>
                </div>
              </li>
              <li>
                <span class="control-label col-lg-2 col-xs-4">LinkedIn:</span>
                <div class="form-input col-lg-10 col-xs-8">
                  <div class="form-control"><%= profile_linkedin %></div>
                </div>
              </li>
              <li>
                <span class="control-label col-lg-2 col-xs-4">Desired Salary:</span>
                <div class="form-input col-lg-10 col-xs-8">
                  <div class="form-control"><%= profile_desired_salary %></div>
                </div>
              </li>
              <li>
                <span class="control-label col-lg-2 col-xs-4">Desired Hourly:</span>
                <div class="form-input col-lg-10 col-xs-8">
                  <div class="form-control"><%= profile_desired_hourly %></div>
                </div>
              </li>
            </ul>
          </div>
        </div>
        <p>
          <%= link_to "Edit Profile", edit_profile_path(@profile),
                      class: "btn btn-primary" if @profile.owner?(current_user) %>
          <%= link_to "Send message", new_message_path(to: @user.id),
                      class: "btn btn-primary btn-lg" unless @profile.owner?(current_user)%>
        </p>
      <% else %>
        <p><%= link_to "Create Profile", new_user_profile_path(@user) %></p>
      <% end %>
    </div>
  </div>

  <!-- Google Map -->
  <div id="map"></div>

</div>
