<div class="container">
  <%= form_for [@user, @profile] do |f| %>
    <% if @profile.errors.any? %>
      <div class="error-explanation">
        <h3><%= pluralize(@profile.errors.count, "error") %> prohibited
          this profile from being saved:</h3>
        <ul>
          <% @profile.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <p>
      <%= f.label :summary %><br>
      <%= f.text_area :summary, size: "60x10" %>
    </p>
    <p>
      <%= f.label :website %><br>
      http://<%= f.text_field :website, size: "40" %>
    </p>
    <p>
      <%= f.label :github %><br>
      http://<%= f.text_field :github, size: "40" %>
    </p>
    <p>
      <%= f.label :linkedin %><br>
      http://<%= f.text_field :linkedin, size: "40" %>
    </p>
    <p>
      <%= f.label :desired_salary %><br>
      $<%= f.number_field :desired_salary, in: 40..200, step: 5 %>k yearly
      <span>*required</span>
    </p>
    <p>
      <%= f.label :desired_hourly %><br>
      $<%= f.number_field :desired_hourly, in: 20..100, step: 5 %> per hour
      <span>*required</span>
    </p>

    <div class="action">
      <%= f.submit "Create", class: "button" %>
    </div>
  <% end %>
</div>
