<div class="profile-form">
<%= form_for @profile do |f| %>
  <% if @profile.errors.any? %>
    <div class="error-explanation">
      <h3><%= pluralize(@profile.errors.count, "error") %> prohibited
        this profile from being saved:</h3>
      <ul>
        <% @profile.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-horizontal">
    <div class="form-group">
      <h3>Profile information:</h3>
      <div class="row">
        <p>
          <%= f.label :summary, class: "control-label col-xs-3 col-md-2" %>
          <div class="form-input col-xs-9 col-md-10">
          <%= f.text_area :summary, class: "form-control" %>
          </div>
        </p>
        <p>
          <%= f.label :website, class: "control-label col-xs-3 col-md-2" %>
          <div class="form-input col-xs-9 col-md-10">
            <div class="input-group">
              <div class="input-group-addon">http://</div>
              <%= f.text_field :website, placeholder: "example.com", class: "form-control" %>
            </div>
          </div>
        </p>
        <p>
          <%= f.label :github, class: "control-label col-xs-3 col-md-2" %>
          <div class="form-input col-xs-9 col-md-10">
            <div class="input-group">
              <div class="input-group-addon">http://</div>
              <%= f.text_field :github, placeholder: "example.com", class: "form-control" %>
            </div>
          </div>
        </p>
        <p>
          <%= f.label :linkedin, class: "control-label col-xs-3 col-md-2" %>
          <div class="form-input col-xs-9 col-md-10">
            <div class="input-group">
              <div class="input-group-addon">http://</div>
              <%= f.text_field :linkedin, placeholder: "example.com", class: "form-control" %>
            </div>
          </div>
        </p>
        <p>
          <%= f.label :desired_salary, class: "control-label col-xs-3 col-md-2" %>
          <div class="form-input col-xs-9 col-md-10">
            <div class="input-group">
              <div class="input-group-addon">$</div>
              <%= f.number_field :desired_salary, in: 40..200, step: 5, class: "form-control", placeholder: "k per year" %>
              <div class="input-group-addon">k per year</div>
            </div>
            <span>*required</span>
          </div>
        </p>
        <p>
          <%= f.label :desired_hourly, class: "control-label col-xs-3 col-md-2" %>
          <div class="form-input col-xs-9 col-md-10">
            <div class="input-group">
              <div class="input-group-addon">$</div>
              <%= f.number_field :desired_hourly, in: 20..100, step: 5, class: "form-control" %>
              <div class="input-group-addon">per hour</div>
            </div>
            <span>*required</span>
          </div>
        </p>
        <p>
          <%= f.label :framework, class: "control-label col-xs-3 col-md-2" %>
          <div class="form-input col-xs-9 col-md-10">
            <div class="input-group">
              <%= f.select :framework, @frameworks, class: "form-control select" %>
            </div>
          </div>
        </p>
      </div>

      <h3>Current location:</h3>
      <div class="row">
        <p>
          <%= f.label :street_address, class: "control-label col-xs-3 col-md-2" %>
          <div class="form-input col-xs-9 col-md-10">
            <%= f.text_field :street_address, class: "form-control" %>
            <span>*required</span>
          </div>
        </p>
        <p>
          <%= f.label :city, class: "control-label col-xs-3 col-md-2" %>
          <div class="form-input col-xs-9 col-md-10">
            <%= f.text_field :city, class: "form-control" %>
            <span>*required</span>
          </div>
        </p>
        <p>
          <%= f.label :state, class: "control-label col-xs-3 col-md-2" %>
          <div class="form-input col-xs-9 col-md-10">
            <%= f.text_field :state, class: "form-control" %>
            <span>*required</span>
          </div>
        </p>
        <p>
          <%= f.label :zip_code, class: "control-label col-xs-3 col-md-2" %>
          <div class="form-input col-xs-9 col-md-10">
            <%= f.text_field :zip_code, class: "form-control" %>
            <span>*required</span>
          </div>
        </p>
      </div>
    </div>
  </div>
  <div class="action">
    <%= f.submit "Save", class: "btn btn-primary", id: "update-profile-btn" %>
  </div>
<% end %>
</div>
