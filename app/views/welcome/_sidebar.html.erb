<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div id="sidebar">
    <div class="panel panel-default panel-group">
      <div class="panel-body">
        <div class="panel-heading" role="tab" id="heading">
          <h4 class="panel-title">Developers by Framework</h4>
          <hr>
          <% @frameworks.each_with_index do |framework, i| %>
            <h3 class="panel-title" id="framework-<%= i %>">
              <a role="button" data-toggle="collapse" data-parent="#accordion"
                href="#<%= framework %>" aria-expanded="true"
                aria-controls="<%= framework %>">
                <%= framework %><span class="caret"></span>
              </a>
            </h3>
            <div id="<%= framework %>" class="panel-collapse collapse panel-scroll"
              role="tabpanel" aria-labelledby="<%= framework %>">
              <div id="profiles-by-framework">
                <ul>
                  <% @profiles.each do |profile| %>
                    <% if profile.framework == framework %>
                      <li>
                        <p>
                          <span id="<%= "pf-uid-#{profile.user_id}" %>"></span><br>
                          <div id="<%= "user-profile-#{profile.user_id}" %>"
                            class="panel-collapse collapse in panel-scroll"
                            role="tabpanel" aria-labelledby="headingOne">
                            <%= link_to "View profile", user_path(profile.user_id),
                              id: "vp-#{profile.user_id}" %>
                          </div>
                        </p>
                      </li>
                    <% end %>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
