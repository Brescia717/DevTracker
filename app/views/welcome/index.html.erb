<div class="container-fluid">
  <h1>Welcome!</h1>
  <span>
    <img src="<%= image_path "Rails.png" %>" alt="" />
  </span>

  <div class="profiles-search">
    <%= render 'profiles_search_form' %>
  </div>

  <div class="results">
    <%= render 'results' %>
  </div>
  <div class="row">
    <div class="map col-md-9">
      <%= render 'map' %>
    </div>

    <div class="container">
      <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <div id="sidebar" class="col-md-3">
          <div class="panel panel-default panel-group">
            <div class="panel-body">
              <div class="panel-heading" role="tab" id="heading">
                <h4 class="panel-title">Developers by Framework</h4>
                <hr>
                <% @frameworks.each do |framework| %>
                  <h3 class="panel-title">
                    <a role="button" data-toggle="collapse" data-parent="#accordion" href="#<%= framework %>" aria-expanded="true" aria-controls="<%= framework %>">
                      <%= framework %><span class="caret"></span>
                    </a>
                  </h3>
                  <div id="<%= framework %>" class="panel-collapse collapse panel-scroll in" role="tabpanel" aria-labelledby="<%= framework %>">
                    <div id="profiles-by-framework">
                      <ul>
                        <% @profiles.each do |profile| %>
                          <% if profile.framework == framework %>
                            <li>
                              <p>
                                <span id="<%= "pf-uid-#{profile.user_id}" %>"></span><br>
                                <div id="<%= "user-profile-#{profile.user_id}" %>" class="panel-collapse collapse in panel-scroll" role="tabpanel" aria-labelledby="headingOne">
                                <%= link_to "View profile", user_path(profile.user_id),
                                  id: "vp-#{profile.user_id}" %>
                                </div>
                              </p>
                            </li>
                          <% end %>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
  <hr>
