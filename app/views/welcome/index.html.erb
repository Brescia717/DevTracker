<div class="container">
  <h1>Welcome!</h1>

  <div class="profiles-search">
    <%= render 'profiles_search_form' %>
  </div>

  <div class="results">
    <%= render 'results' %>
  </div>

  <div class="map">
    <%= render 'map' %>
    <div class="container">
      <div id="sidebar">
        <h2>Developers by Framework</h2>

        <% ProfileHelper.available_frameworks.each do |framework| %>
          <h3><%= framework %></h3>
          <ul>
            <% @profiles.each do |profile| %>
              <% if profile.framework == framework %>
                <li>
                  <p>
                    <span id="<%= "pf-uid-#{profile.user_id}" %>"></span><br>
                    <%= profile.summary %><br>
                    <%= link_to "View profile", user_path(profile.user_id),
                      id: "vp-#{profile.user_id}" %>
                  </p>
                </li>
              <% end %>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>

  <hr>
